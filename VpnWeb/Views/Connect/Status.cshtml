@model EntityLayer.Concrete.UserVpn

@{
    Layout = null;
    ViewData["Title"] = "VPN Status";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GlobalShield</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="~/css/status.css" rel="stylesheet" />
</head>

<body>
    <a asp-action="Index" class="back-link">
        <i class="fa-solid fa-arrow-left"></i>
        Back to Servers
    </a>

    <div class="status-container">
        <div class="status-card">
            <div class="status-header">
                <h1><i class="fa-solid fa-shield-halved" style="color: var(--primary);"></i> VPN Status</h1>

                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success d-flex align-items-center gap-3"
                        style="background: rgba(74, 222, 128, 0.1); border-color: rgba(74, 222, 128, 0.2); color: #4ade80; margin-bottom: 1.5rem; margin-top: 1rem;">
                        <i class="fa-solid fa-circle-check fa-lg"></i>
                        <div>
                            <strong>Başarılı!</strong>
                            <br />
                            @TempData["Success"]
                        </div>
                    </div>
                }

                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger d-flex align-items-center gap-3"
                        style="background: rgba(239, 68, 68, 0.1); border-color: rgba(239, 68, 68, 0.2); color: #f87171; margin-bottom: 1.5rem; margin-top: 1rem;">
                        <i class="fa-solid fa-triangle-exclamation fa-lg"></i>
                        <div>
                            <strong>Hata!</strong>
                            <br />
                            @TempData["Error"]
                        </div>
                    </div>
                }

                @if (Model != null && Model.IsActive)
                {
                    <div class="status-badge active">
                        <span class="status-icon"></span>
                        Connected & Secure
                    </div>
                }
                else
                {
                    <div class="status-badge inactive">
                        <span class="status-icon"></span>
                        Disconnected
                    </div>
                }
            </div>

            @if (Model != null && Model.IsActive)
            {
                <div class="info-section">
                    <div class="info-row">
                        <span class="info-label">
                            <i class="fa-solid fa-network-wired"></i>
                            Your IP Address
                        </span>
                        <span class="info-value">@Model.ClientIp</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">
                            <i class="fa-solid fa-lock"></i>
                            Connection Status
                        </span>
                        <span class="info-value">Encrypted</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">
                            <i class="fa-solid fa-bolt"></i>
                            Protocol
                        </span>
                        <span class="info-value">WireGuard</span>
                    </div>
                </div>

                @if (ViewBag.QrCodeImage != null)
                {
                    <div class="qr-section">
                        <h3><i class="fa-solid fa-mobile-screen-button"></i> Mobile Connection</h3>
                        <p>Scan this QR code with the WireGuard app on your mobile device</p>
                        <div class="qr-code-wrapper">
                            <img src="@ViewBag.QrCodeImage" alt="WireGuard QR Code" />
                        </div>
                    </div>
                }

                <div class="action-buttons">
                    <a asp-action="DownloadConfig" class="btn btn-primary">
                        <i class="fa-solid fa-download"></i>
                        Download Config
                    </a>
                    <form asp-action="Disconnect" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger">
                            <i class="fa-solid fa-power-off"></i>
                            Disconnect
                        </button>
                    </form>
                </div>

                <div class="config-section">
                    <button class="collapse-btn" onclick="toggleConfig()">
                        <i class="fa-solid fa-file-code"></i>
                        <span id="toggleText">Show Configuration</span>
                    </button>
                    <div class="config-content" id="configContent">
                        <div class="config-text">@Model.ClientConfig</div>
                    </div>
                </div>
            }
            else
            {
                <div class="no-connection">
                    <i class="fa-solid fa-plug-circle-xmark icon"></i>
                    <h2>No Active Connection</h2>
                    <p>You are not currently connected to any VPN server.</p>
                    <a asp-action="Index" class="btn btn-success">
                        <i class="fa-solid fa-server"></i>
                        Browse Servers
                    </a>
                </div>
            }
        </div>
    </div>

    <script>
        function toggleConfig() {
            const content = document.getElementById('configContent');
            const text = document.getElementById('toggleText');
            content.classList.toggle('show');

            if (content.classList.contains('show')) {
                text.textContent = 'Hide Configuration';
            } else {
                text.textContent = 'Show Configuration';
            }
        }

        // Loading overlay script
        document.querySelectorAll('form').forEach(form => {
            form.addEventListener('submit', function () {
                document.getElementById('loadingOverlay').style.display = 'flex';
            });
        });

        document.querySelectorAll('a').forEach(link => {
            if (!link.hasAttribute('href') || link.getAttribute('href').startsWith('#')) return;
            link.addEventListener('click', function (e) {
                document.getElementById('loadingOverlay').style.display = 'flex';
            });
        });
    </script>

    <!-- Loading Overlay -->
    <div id="loadingOverlay" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%;
            background: rgba(15, 23, 42, 0.95); z-index: 9999;
            justify-content: center; align-items: center; flex-direction: column; gap: 2rem;">
        <div style="text-align: center;">
            <i class="fa-solid fa-shield-halved"
                style="font-size: 4rem; color: #3b82f6; margin-bottom: 1rem; animation: pulse 1.5s ease-in-out infinite;"></i>
            <div class="spinner-border text-primary" role="status"
                style="width: 60px; height: 60px; border-width: 4px;">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p style="color: rgba(255, 255, 255, 0.6); margin-top: 1.5rem; font-size: 0.95rem;">Processing...</p>
        </div>
    </div>
    <link href="~/css/overloading.css" rel="stylesheet" />

</body>

</html>