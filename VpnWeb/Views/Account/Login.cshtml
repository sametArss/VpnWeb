@model VpnWeb.Models.LoginDto
@{
    Layout = null;
    ViewData["Title"] = "Secure Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShieldVPN</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="~/css/login.css" rel="stylesheet" />
 
</head>
<body>

    <div class="map-bg"></div>

    <!-- Optional: Status Indicator -->
    <div class="status-dot">
        <div class="pulse"></div>
        System Operational
    </div>

    <div class="login-container">
        <div class="brand-logo">
            <i class="fa-solid fa-shield-halved"></i>
            <h1>GlobalShield</h1>
            <p class="subtitle">Secure . Anonymous . Private</p>
        </div>

        <form asp-action="Login" method="post">

            <div class="form-group">
                <label>Email Address</label>
                <div class="input-wrapper">
                    <input asp-for="Email"
                           class="form-control"
                           type="email"
                           placeholder="name@example.com"
                           required
                           autocomplete="off" />
                    <i class="fa-solid fa-envelope"></i>
                </div>
            </div>

            <div class="form-group">
                <label>Password</label>
                <div class="input-wrapper">
                    <input asp-for="Password"
                           class="form-control"
                           type="password"
                           placeholder="••••••••"
                           required />
                    <i class="fa-solid fa-lock"></i>
                </div>
            </div>

            <div class="links">
                <label style="display: flex; align-items: center; gap: 8px; cursor: pointer; color: var(--text-muted);">
                    <input type="checkbox" style="accent-color: var(--primary);">
                    Remember me
                </label>

                <a asp-controller="Account"
                   asp-action="ForgotPassword">
                    Forgot password?
                </a>
            </div>

            <button type="submit" class="btn-login" style="margin-top: 1.5rem;">
                Secure Login
                <i class="fa-solid fa-arrow-right" style="margin-left: 8px;"></i>
            </button>

            <div class="register-link">
                Don't have an account?
                <a asp-action="Register">Get Protected Now</a>
            </div>

        </form>

    @* Re-include Validation Scripts if needed (assuming partial exists) *@
    @* We can't use 'section Scripts' here because Layout is null, so we must include script tags manually if we want client-side validation *
       For now, standard form submission works fine. Should the user need it, we can add it. *@

</body>
</html>
