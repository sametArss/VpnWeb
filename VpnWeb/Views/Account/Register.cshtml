@model VpnWeb.Models.RegisterDto
@{
    Layout = null;
    ViewData["Title"] = "Secure Registration";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShieldVPN</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="~/css/login.css" rel="stylesheet" />
</head>
<body>

    <div class="map-bg"></div>

    <!-- Optional: Status Indicator -->
    <div class="status-dot">
        <div class="pulse"></div>
        System Operational
    </div>

    <div class="login-container">
        <div class="brand-logo">
            <i class="fa-solid fa-user-shield"></i>
            <h1>Join GlobalShield</h1>
            <p class="subtitle">Create your anonymous identity</p>
        </div>

        <form asp-action="Register" method="post">
            <div class="form-group">
                <label>Full Name</label>
                <div class="input-wrapper">
                    <input asp-for="FullName" class="form-control" type="text" placeholder="John Doe" required autocomplete="name" />
                    <i class="fa-solid fa-user"></i>
                </div>
            </div>

            <div class="form-group">
                <label>Email Address</label>
                <div class="input-wrapper">
                    <input asp-for="Email" class="form-control" type="email" placeholder="name@example.com" required autocomplete="email" />
                    <i class="fa-solid fa-envelope"></i>
                </div>
            </div>

            <div class="form-group">
                <label>Password</label>
                <div class="input-wrapper">
                    <input asp-for="Password" class="form-control" type="password" placeholder="••••••••" required autocomplete="new-password" />
                    <i class="fa-solid fa-lock"></i>
                </div>
            </div>

            <button type="submit" class="btn-login" style="margin-top: 1rem;">
                Create Account <i class="fa-solid fa-arrow-right" style="margin-left: 8px;"></i>
            </button>

            <div class="register-link">
                Already have an account? 
                <a asp-action="Login">Sign In</a>
            </div>
        </form>
    </div>

</body>
</html>
