@model BusiniessLayer.Abstract.ResetPasswordDto

@{
    Layout = null;
    ViewData["Title"] = "Şifre Sıfırla";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShieldVPN</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="~/css/login.css" rel="stylesheet" />
</head>
<body>

    <div class="map-bg"></div>

    <div class="status-dot">
        <div class="pulse"></div>
        System Operational
    </div>

    <div class="login-container">
        <div class="brand-logo">
            <i class="fa-solid fa-shield-halved"></i>
            <h1>GlobalShield</h1>
            <p class="subtitle">Secure . Anonymous . Private</p>
        </div>

        <div style="text-align: center; margin-bottom: 2rem;">
            <h2 style="font-size: 1.5rem; font-weight: 600; margin-bottom: 0.5rem;">Yeni Şifre Belirle</h2>
            <p style="color: var(--text-muted); font-size: 0.875rem;">Hesabınız için güçlü bir şifre oluşturun.</p>
        </div>

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger" style="background: rgba(239, 68, 68, 0.1); border: 1px solid rgba(239, 68, 68, 0.2); color: #f87171; padding: 1rem; border-radius: 10px; margin-bottom: 1.5rem; font-size: 0.9rem;">
                <i class="fa-solid fa-circle-exclamation" style="margin-right: 8px;"></i>
                @TempData["Error"]
            </div>
        }

        <form asp-action="ResetPassword" method="post">

            <!-- Token gizli -->
            <input type="hidden" asp-for="Token" />

            <div class="form-group">
                <label>Yeni Şifre</label>
                <div class="input-wrapper">
                    <input asp-for="NewPassword" type="password" class="form-control" placeholder="••••••••" required />
                    <i class="fa-solid fa-lock"></i>
                </div>
            </div>

            <div class="form-group">
                <label>Yeni Şifre (Tekrar)</label>
                <div class="input-wrapper">
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="••••••••" required />
                    <i class="fa-solid fa-lock"></i>
                </div>
            </div>

            <button type="submit" class="btn-login">
                Şifreyi Güncelle
                <i class="fa-solid fa-arrow-rotate-right" style="margin-left: 8px;"></i>
            </button>
            
             <div class="register-link">
                <a asp-controller="Account" asp-action="Login">
                    <i class="fa-solid fa-arrow-left" style="margin-right: 4px;"></i>
                    Giriş'e Dön
                </a>
            </div>

        </form>
    </div>

</body>
</html>
