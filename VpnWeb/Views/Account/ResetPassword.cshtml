@model BusiniessLayer.Abstract.ResetPasswordDto

@{
    Layout = null;
    ViewData["Title"] = "Şifre Sıfırla";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShieldVPN</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="~/css/login.css" rel="stylesheet" />
</head>

<body>

    <div class="map-bg"></div>

    <div class="status-dot">
        <div class="pulse"></div>
        System Operational
    </div>

    <div class="login-container">
        <div class="brand-logo">
            <i class="fa-solid fa-shield-halved"></i>
            <h1>GlobalShield</h1>
            <p class="subtitle">Secure . Anonymous . Private</p>
        </div>

        <div style="text-align: center; margin-bottom: 2rem;">
            <h2 style="font-size: 1.5rem; font-weight: 600; margin-bottom: 0.5rem;">Yeni Şifre Belirle</h2>
            <p style="color: var(--text-muted); font-size: 0.875rem;">Hesabınız için güçlü bir şifre oluşturun.</p>
        </div>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success"
                style="background: rgba(74, 222, 128, 0.1); border: 1px solid rgba(74, 222, 128, 0.2); color: #4ade80; padding: 1rem; border-radius: 10px; margin-bottom: 1.5rem; font-size: 0.9rem;">
                <i class="fa-solid fa-check-circle" style="margin-right: 8px;"></i>
                @TempData["Success"]
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger"
                style="background: rgba(239, 68, 68, 0.1); border: 1px solid rgba(239, 68, 68, 0.2); color: #f87171; padding: 1rem; border-radius: 10px; margin-bottom: 1.5rem; font-size: 0.9rem;">
                <i class="fa-solid fa-circle-exclamation" style="margin-right: 8px;"></i>
                @TempData["Error"]
            </div>
        }

        <form asp-action="ResetPassword" method="post">

            <!-- Token gizli -->
            <input type="hidden" asp-for="Token" />

            <div class="form-group">
                <label>Yeni Şifre</label>
                <div class="input-wrapper">
                    <input asp-for="NewPassword" type="password" class="form-control" placeholder="••••••••" required />
                    <i class="fa-solid fa-lock"></i>
                </div>
            </div>

            <div class="form-group">
                <label>Yeni Şifre (Tekrar)</label>
                <div class="input-wrapper">
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="••••••••"
                        required />
                    <i class="fa-solid fa-lock"></i>
                </div>
            </div>

            <button type="submit" class="btn-login">
                Şifreyi Güncelle
                <i class="fa-solid fa-arrow-rotate-right" style="margin-left: 8px;"></i>
            </button>

            <div class="register-link">
                <a asp-controller="Account" asp-action="Login">
                    <i class="fa-solid fa-arrow-left" style="margin-right: 4px;"></i>
                    Giriş'e Dön
                </a>
            </div>

        </form>
    </div>

    <!-- Loading Overlay -->
    <div id="loadingOverlay" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%;
            background: rgba(15, 23, 42, 0.95); z-index: 9999;
            justify-content: center; align-items: center; flex-direction: column; gap: 2rem;">
        <div style="text-align: center;">
            <i class="fa-solid fa-shield-halved"
                style="font-size: 4rem; color: #3b82f6; margin-bottom: 1rem; animation: pulse 1.5s ease-in-out infinite;"></i>
            <div class="spinner-border text-primary" role="status"
                style="width: 60px; height: 60px; border-width: 4px;">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p style="color: rgba(255, 255, 255, 0.6); margin-top: 1.5rem; font-size: 0.95rem;">Şifre güncelleniyor...
            </p>
        </div>
    </div>

    <link href="~/css/overloading.css" rel="stylesheet" />

    <script>
        document.querySelectorAll('form').forEach(form => {
            form.addEventListener('submit', function () {
                document.getElementById('loadingOverlay').style.display = 'flex';
            });
        });

        document.querySelectorAll('a').forEach(link => {
            if (!link.hasAttribute('href') || link.getAttribute('href').startsWith('#')) return;
            link.addEventListener('click', function (e) {
                document.getElementById('loadingOverlay').style.display = 'flex';
            });
        });
    </script>

</body>

</html>